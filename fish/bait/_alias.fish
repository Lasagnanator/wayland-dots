##### GENERAL ALIASES #####

# Colors
alias grep 'grep --color'
alias diff 'diff --color=auto'
alias ip 'ip -color=auto'

# Utilities
alias v 'nvim'
alias vi 'nvim'
alias vim 'nvim'
alias sv 'sudo -E nvim'
alias g 'git'
alias r 'ranger-cd'
alias lz 'lazygit'

# Packet managers
alias pac 'sudo pacman'
alias zyp 'sudo zypper'
alias dnf 'sudo dnf'
alias apt 'sudo apt'

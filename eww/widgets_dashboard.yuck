(defwidget datetime []
  (box :class "tile"
       :halign "center"
       :orientation "vertical"
       :width "${dash_side_size * 2}" 
       :height "${dash_side_size * 2}" 
       (box :class "datetime"
            :halign "start"
         (label :text "${datetime.weekday},"
                :class "week"))
       (box :class "datetime"
            :halign "end"
         (label :text "${datetime.day} ${datetime.month}, ${datetime.year}"
                :class "date"))
       (box :class "datetime"
         (label :text "${datetime.time}"
                :class "time"))))

(defwidget profile []
  (box :class "profile"
       :orientation "vertical"
       :space-evenly false
       :width "${dash_side_size * 2}"  
       :height "${dash_side_size * 3}"  
       (box :class "propic"
             :width "${dash_side_size * 1.6}"  
             :height "${dash_side_size * 1.6}")  
       (label :text "Greetings, ${user}!"
              :class "text"
              :width "${dash_side_size}"  
              :height "${dash_side_size}")))  


